<?xml version="1.0" encoding="UTF-8"?>
<module name="VirtualPlan" label="虚拟计划" version="" package="com.efeiyi.jh.model" path="">
    <entities>
        <entity name="PCVirtualPlan" label="虚拟计划" model="com.efeiyi.jh.model.VirtualPlan">
            <fields>
                <field name="status" label="状态" inputType="text">
                    <statusType fieldName="status">
                        <item label="已取消" value="0"/>
                        <item label="未开始" value="1"/>
                        <item label="运行中" value="2"/>
                        <item label="暂停" value="3"/>
                        <item label="完成" value="4"/>
                    </statusType>
                </field>
                <field name="planType" label="对象" inputType="text">
                    <statusType fieldName="planType">
                        <item label="订单" value="order"/>
                        <item label="点赞" value="praise"/>
                        <item label="收藏" value="collect"/>
                        <item label="人气" value="popularity"/>
                    </statusType>
                </field>
            </fields>
            <does>
                <do name="plistVirtualPlan" access="" label="虚拟计划分页列表" result="/virtualPlan/virtualPlanPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="0" operation="ne"/>
                    </query>
                </do>
                <do name="formVirtualPlan" label="认证信息" access="" result="/virtualPlan/virtualPlanForm"/>
            </does>
        </entity>
    </entities>
</module>