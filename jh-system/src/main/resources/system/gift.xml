<?xml version="1.0" encoding="UTF-8"?>

<module name="Organization" label="组织" version="" package="com.efeiyi" path="">
    <entities>
        <entity name="PCUser" label="企业用户"  model="com.efeiyi.ec.organization.model.User">
            <fields>
                <field name="status" label="状态" inputType="text">
                    <statusType fieldName="status">
                        <item label="已删除" value="0"/>
                        <item label="正常" value="3"/>
                    </statusType>
                </field>
            </fields>
            <does>
                <do name="listUser" access="" label="企业用户列表">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="3" operation="eq"/>
                    </query>
                </do>
                <do name="plistUser" access="" label="企业用户分页列表" result="/companyGift/companyUser/userPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="3" operation="eq"/>
                    </query>
                </do>

                <do name="formUser" label="用户信息" access="" result="/companyGift/companyUser/userForm"/>
                <!--<do name="viewUser" label="用户信息详情页" access="" result="/companyGift/companyUser/userView"/>-->
                <do name="removeUser" label="删除用户信息" access="" result="redirect:/basic/xm.do?qm=plistUser_default"/>
                <do name="saveOrUpdateUser" label="新建或更新用户信息" access="" result="redirect:/basic/xm.do?qm=plistUser_default"
                    execute="com.efeiyi.jh.Handler.CompanyUserHandler">
                </do>
            </does>
        </entity>

        <entity name="PCCompanyGifts" label="企业礼品卡" model="com.efeiyi.jh.companyGift.model.CompanyGifts">
            <does>
                <do name="plistCompanyGifts" access="" label="企业礼品卡分页列表" result="/companyGift/companyGifts/companyGiftPList">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="0" operation="ne"/>
                    </query>
                </do>

                <do name="formCompanyGifts" label="礼品卡信息" access="" result="/companyGift/companyGifts/companyGiftForm"/>
                <do name="removeCompanyGifts" label="删除礼品卡信息" access="" result="redirect:/basic/xm.do?qm=plistCompanyGifts_default"/>
                <do name="saveOrUpdateCompanyGifts" label="新建或更新用户信息" access="" result="redirect:/basic/xm.do?qm=plistCompanyGifts_default"
                    execute="com.efeiyi.jh.Handler.CompanyGiftHandler">
                </do>
            </does>
        </entity>

        <entity name="PCProduct" label="礼品" model="com.efeiyi.ec.product.model.Product">
            <does>
                <do name="listProduct" access="" label="礼品卡列表">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="1" operation="eq"/>
                    </query>
                </do>
            </does>
        </entity>
    </entities>
</module>
