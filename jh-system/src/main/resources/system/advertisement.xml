<?xml version="1.0" encoding="UTF-8"?>
<module name="advertisement" label="返利管理" version="" package="com.efeiyi.jh.advertisement.model" path="">
    <entities>
        <entity name="PCPromotionPlan" label="返利" model="com.efeiyi.jh.advertisement.model.PromotionPlan">
            <fields>
                <field name="name" label="分享渠道" inputType="text">
                    <statusType fieldName="name">
                        <item label="请选择"/>
                        <item label="内部员工" value="1"/>
                        <item label="合作伙伴" value="3"/>
                        <item label="其他" value="5"/>
                        <item label="广告商" value="7"/>
                    </statusType>
                </field>
            </fields>
            <does>
                <do name="plistPromotionPlan" access="" label="返利分页列表" result="/advertisement/promotionPlanPList"
                        execute="com.efeiyi.jh.Handler.PromotionPlanListHandler">
                    <query name="default" label="默认" type="auto" orderBy="id:desc">
                        <condition name="status" defaultValue="0" operation="ne"/>
                    </query>
                </do>
                <do name="formPromotionPlan" label="返利表单" access="" result="/advertisement/promotionPlanForm"/>
                <do name="removePromotionPlan" label="删除返利链接" access="" result="redirect:/basic/xm.do?qm=plistPromotionPlan_default"/>
                <do name="saveOrUpdatePromotionPlan" label="新建或更新" access="" result="redirect:/basic/xm.do?qm=plistPromotionPlan_default"
                    execute="com.efeiyi.jh.Handler.PromotionPlanSaveHandler">
                    <page>
                        <fields>
                            <field name="createDatetime" label="创建时间" defaultValue="${CURRENT_DATETIME}" inputType="default"/>
                        </fields>
                    </page>
                </do>
            </does>
        </entity>
    </entities>
</module>